<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shopping Cart</title>
    <style>
    body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
    }
        .summary {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 5px;
            width: 300px;
        }

            .summary h3 {
                margin-bottom: 20px;
            }

            .summary p {
                margin: 5px 0;
            }

        .total {
            font-weight: bold;
            color: red;
        }
    .container {
    width: 90%;
    margin: 20px auto;
    }
    .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    }
    .header input {
    width: 250px;
    padding: 10px;
    }
    .cart {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    background-color: white;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .cart .left-section {
    width: 70%;
    }
    .cart .right-section {
    width: 25%;
    background-color: #f9f9f9;
    padding: 15px;
    border: 1px solid #e0e0e0;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }
    .cart .product {
    display: flex;
    justify-content: space-between;
    padding: 20px 0;
    border-bottom: 1px solid #e0e0e0;
    }
    .cart .product img {
    width: 80px;
    height: 80px;
    margin-right: 20px;
    }
    .cart .product-info {
    flex: 1;
    }
    .cart .product-price {
    font-size: 16px;
    color: red;
    }
    .cart .summary {
    margin-top: 20px;
    }
    .cart .summary div {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    }
    .cart .summary .total-price {
    font-size: 20px;
    color: red;
    }
    .cart button {
    width: 100%;
    padding: 15px;
    background-color: #ff424e;
    color: white;
    border: none;
    font-size: 16px;
    cursor: pointer;
    }
    .cart button:hover {
    background-color: #e63946;
    }
    </style>
    <script>
        const products = [
            { name: "Samsung Galaxy A54 5G (8GB/128GB)", quantity: 1, price: 8480000 },
            { name: "Samsung Galaxy A54 5G (8GB/256GB)", quantity: 1, price: 8890000 }
        ];

        function summarizeCart() {
            let totalQuantity = 0;
            let totalPrice = 0;
            let productDetails = '';

            
            products.forEach(product => {
                totalQuantity += product.quantity;
                totalPrice += product.quantity * product.price;
                productDetails += `${product.name} x${product.quantity} - ${(product.price).toLocaleString('vi-VN')}₫<br>`;
            });

            
            document.getElementById('product-summary').innerHTML = productDetails;
            document.getElementById('total-cost').innerText = `Total: ${totalPrice.toLocaleString('vi-VN')}₫ for ${totalQuantity} item(s)`;
        }

        
        summarizeCart();
    </script>
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <div>
                <h2>Shopping Cart</h2>
                <div class="summary">
                    <h3>Cart Summary</h3>
                    <p id="product-summary"></p>
                    <p class="total" id="total-cost"></p>
                </div>
            </div>
            <div>
                <input type="text" placeholder="Tìm kiếm">
                <button>Tìm kiếm</button>
            </div>
        </div>

        <!-- Cart Section -->
        <div class="cart">
            <!-- Left Section: Products -->
            <div class="left-section" id="product-list">
                <div class="product">
                    <div class="product-info">
                        <img src="phone1.png" alt="Product 1">
                        <div>
                            <p>Điện thoại Samsung Galaxy A54 5G (8GB/128GB) - Hàng chính hãng</p>
                            <p class="product-price">8.480.000₫</p>
                        </div>
                    </div>
                    <div>
                        <p>1</p>
                        <p>8.480.000₫</p>
                    </div>
                </div>

                <div class="product">
                    <div class="product-info">
                        <img src="phone2.png" alt="Product 2">
                        <div>
                            <p>Điện thoại Samsung Galaxy A54 5G (8GB/256GB) - Hàng chính hãng</p>
                            <p class="product-price">8.890.000₫</p>
                        </div>
                    </div>
                    <div>
                        <p>1</p>
                        <p>8.890.000₫</p>
                    </div>
                </div>
            </div>

            <!-- Right Section: Summary and Checkout -->
            <div class="right-section">
                <h3>Order Summary</h3>
                <div class="summary">
                    <div>
                        <p>Subtotal</p>
                        <p id="subtotal">0₫</p>
                    </div>
                    <div>
                        <p>Discount</p>
                        <p>0₫</p>
                    </div>
                    <div>
                        <p>Shipping</p>
                        <p>Free</p>
                    </div>
                    <div class="total-price">
                        <p>Total</p>
                        <p id="total-price">0₫</p>
                    </div>
                </div>
                <button>Proceed to Checkout</button>
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>

    <script src="cart.js"></script>


</body>
</html>
